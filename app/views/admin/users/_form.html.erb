<% content_for :page_title do %>
<%= render "title" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="portlet box">
      <div class="portlet-body form">
        <%= form_for([:admin, @user], html: { class: "form-horizontal" } ) do |f| %>
         <div class="form-body">
           <%= f.error_messages %>
           <h4 class="form-section">基本信息</h4>
           <div class="form-group">
             <%= render "shared/column", name: "账号", content: f.c_text_field(:username) %>
             <%= render "shared/column", name: "邮箱", content: f.c_text_field(:email) %>
             <%= render "shared/column", name: "角色", content: f.select(:role, ["管理员", "服务商", "客户经理", "车主"], {}, { class: "form-control select2me", data: { placeholder: "请选择" } }) %>
           </div>

           <div class="form-group">
             <label class="control-label col-md-1">密码</label>
             <div class="col-md-3">
              <%= f.password_field :password, { class: "form-control" } %>
             </div>
             <label class="control-label col-md-1">确认密码</label>
             <div class="col-md-3">
              <%= f.password_field :password_confirmation, { class: "form-control" } %>
             </div>
           </div>
         </div>
         <div class="form-actions right">
           <button type="submit" class="btn">保存</button>
         </div>
        <% end %>  
        </div>
    </div>
  </div>
</div>