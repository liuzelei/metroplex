<% content_for :page_title do %>
<%= render "title_bar" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="portlet box">
      <div class="dataTables_wrapper form-inline" role="grid">
        <div class="row">
          <div class="col-md-12 col-sm-12">
            <%= form_tag services_path, :method => 'get' do %>
            <div class="dataTables_filter pull-left">
              <label>
                关键字:<%= text_field_tag :search, params[:search], :class => "form-control input-small" %>
              </label>
              <%= submit_tag '查询', :name => nil, :class => 'btn' %>
            </div>
            <% end %>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="trailer_table">
            <thead>
              <tr>
                <th>服务编号</th>
                <th>服务名称</th>
                <th>创建时间</th>
              </tr>
            </thead>
            <tbody>
              <% @services.each do |f| %>
                <tr>
                  <td><%= f.no %></td>
                  <td><%= f.name %></td>
                  <td><%= f.created_at.strftime('%y-%m-%d %H:%M:%S') if f.created_at %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="myModal" class="modal fade" role="basic" aria-hidden="true">
  <div class="modal-dialog modal-wide">
    <div id="service_content" class="modal-content">
    </div>
  </div>
</div>

<% content_for :page_scripts do %>
  <%= javascript_include_tag "services" %> 
<% end %>